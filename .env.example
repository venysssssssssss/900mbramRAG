# ============================================
# Configuração do Sistema RAG Chat
# ============================================

# APIs - Obtenha suas chaves em:
# Gemini: https://makersuite.google.com/app/apikeys
# Jina: https://jina.ai/

GEMINI_API_KEY=xxx
JINA_API_KEY=xxx

# Modelos de IA
GEMINI_GEN_MODEL=gemini-1.5-pro
JINA_EMBED_MODEL=jina-embeddings-v2-base-en

# Banco de Dados
DB_PATH=./data/docs.db

# Configurações da Aplicação
TOP_K=3                    # Número de documentos similares a retornar
MAX_DOCS=500              # Máximo de documentos no banco de dados
MAX_DOC_SIZE=10485760     # 10MB em bytes (tamanho máximo por documento)

# Logging
LOG_LEVEL=INFO